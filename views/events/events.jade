			h4 #{eventLocation[0].location.address}, #{eventLocation[0].location.city} #{eventLocation[0].location.state}, #{eventLocation[0].location.postalCode}
			h4 #{eventLocation[0].url}
		.row
			h3 Once you've visited #{eventLocation[0].name} head over to #{foodLocation[0].name}
			iframe(class='map-div', width='100%', height='300', frameborder='0', style='border: 0;', src='https://www.google.com/maps/embed/v1/directions?origin=#{eventLocation[0].location.lat},#{eventLocation[0].location.lng}&destination=#{foodLocation[0].location.lat},#{foodLocation[0].location.lng}&key=AIzaSyC7YNko7N6GkPnFmWIrRl1pNUzIsEwZFbk')
