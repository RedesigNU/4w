						span.event-text.fa.fa-star-half-o
							- var remaining = remaining - 1
					- if (remaining > 0)
						- for (var i=0; i < remaining; i++)
							span.event-text.fa.fa-star-o
				br
				if typeof foodLocation[0].location === 'undefined'
					span.event-text #{foodLocation[0].location.address}, #{foodLocation[0].location.city} #{foodLocation[0].location.state}, #{foodLocation[0].location.postalCode}
				else
					//- span.event-text #{foodLocation[0].location.city} #{foodLocation[0].location.state}, #{foodLocation[0].location.postalCode}
			.col-xs-4
				.pull-right.button.btn.btn-default.btn-icon(type='button')
					i.fa.fa-times
